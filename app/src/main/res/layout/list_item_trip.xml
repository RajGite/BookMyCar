<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dateTextView1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Date:"
            android:textStyle="bold"
            android:padding="15dp"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Date"
            android:padding="0dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/daysTextView1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Days"
            android:textStyle="bold"
            android:padding="20dp"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/daysTextView"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Days"
            android:padding="20dp"
            android:textSize="18sp"/>

    </LinearLayout>
    <TextView
        android:id="@+id/startaddressTextView1"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="StartAddress"
        android:textStyle="bold"
        android:padding="20dp"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/startaddressTextView"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="StartAddress"
        android:padding="20dp"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/destinationaddressTextView1"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="DestinationAddress"
        android:textStyle="bold"
        android:padding="20dp"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/destinationaddressTextView"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="DestinationAddress"
        android:padding="20dp"
        android:textSize="18sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/driverTextView1"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Driver:"
            android:textStyle="bold"
            android:padding="10dp"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/driverTextView"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Driver"
            android:padding="10dp"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/fareTextView1"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Fare:"
            android:textStyle="bold"
            android:padding="15dp"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/fareTextView"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Fare"
            android:padding="20dp"
            android:textSize="18sp"/>
    </LinearLayout>
</LinearLayout>